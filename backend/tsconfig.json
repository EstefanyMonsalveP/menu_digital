{
  // Visit https://aka.ms/tsconfig to read more about this file
"compilerOptions": {
    // === Estructura de archivos ===
    "rootDir": "./src",
    "outDir": "./dist",

    // === Configuración del entorno ===
    "target": "ES2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,

    // === Tipos ===
    "types": ["node", "express"],
    "skipLibCheck": true,

    // === Archivos generados ===
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // === Reglas de chequeo ===
    "strict": true,
    "noImplicitAny": false, // ✅ evita el error: Parameter 'origin' implicitly has an 'any' type
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // === Otras opciones ===
    "jsx": "react-jsx",
    "verbatimModuleSyntax": false,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force"
  },
  "include": [
    "src/**/*.ts",
    "src/types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
